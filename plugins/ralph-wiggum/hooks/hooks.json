{
  "description": "Ralph Wiggum plugin hooks for self-referential loops",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File ${CLAUDE_PLUGIN_ROOT}/hooks/stop-hook.ps1"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -File ${CLAUDE_PLUGIN_ROOT}/hooks/post-compact-hook.ps1"
          }
        ]
      }
    ]
  }
}
